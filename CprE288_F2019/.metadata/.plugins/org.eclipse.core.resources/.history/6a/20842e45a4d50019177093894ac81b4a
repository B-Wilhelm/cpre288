    int x = sensor_data->bumpLeft;
    int y= sensor_data->bumpRight;



    //while(x!=1 &&y!=1){
    //move_forward(sensor_data, 900);

//    }
    int total_distance = 1900;
    int distance = 0;
    int diff = total_distance - distance;

while(x!=1 &&y!=1){
    sum_move_forward(sensor_data, diff, &sum3);
   distance = &sum3;
   diff = total_distance - distance;




    oi_init(sensor_data);
    x = sensor_data->bumpLeft;
    y= sensor_data->bumpRight;

}




















